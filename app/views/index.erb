<div class="container" style="padding-top: 165px;">

<button type="button" class="btn btn-default navbar-btn"><a href="/ideas/new">Post New Idea</a></button>

<% @ideas.each do |idea| %>
	<div class="idea">
		<h3><a href="/ideas/<%= idea.id %>"><%= idea.title %></a></h3><small>(by: <%= User.find(idea.user_id).username %>)</small>
	</div>
<%end%>

</div>